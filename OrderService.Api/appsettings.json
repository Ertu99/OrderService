{
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=orderdb;Username=postgres;Password=12345",
    "Redis": "localhost:6379"
  },

  "RabbitMQ": {
    "Host": "localhost"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],

    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },

    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],

    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],

    "Properties": {
      "Application": "OrderService"
    }
  },

  "AllowedHosts": "*"
}

